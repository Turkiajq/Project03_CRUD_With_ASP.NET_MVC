@model Movie
@{
    var movie = (Movie)ViewBag.Movie;
}
<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="form-group">
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <div>
            <input asp-for="Title" value="@movie.Title" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Poster">Poster</label>
        <div>
            <input asp-for="Poster" value="@movie.Poster" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <div>
            <input asp-for="Description" value="@movie.Description" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <div>
            <input asp-for="Rating" value="@movie.Rating" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Cast">Cast</label>
        <div>
            <input asp-for="Cast" value="@movie.Cast" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
    </div>
</form>